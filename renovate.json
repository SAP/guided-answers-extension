{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "automerge": false,
    "packageRules": [
        {
            "matchPaths": ["./package.json"],
            "matchDepTypes": ["devDependencies"],
            "groupName": "root devDependencies",
            "schedule": ["* * * * *"]
        },
        {
            "matchPaths": ["./packages/**"],
            "matchDepTypes": ["devDependencies"],
            "groupName": "modules devDependencies",
            "schedule": ["* * * * *"]
        }
    ]
}
