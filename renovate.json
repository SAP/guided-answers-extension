{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automerge": false,
    "extends": ["config:base"],
    "dependencyDashboard": true,
    "labels": ["renovate"],
    "packageRules": [
        {
            "matchPaths": ["./package.json"],
            "matchDepTypes": ["devDependencies"],
            "groupName": "Root devDependencies",
            "schedule": ["* * * * *"]
        },
        {
            "matchPaths": ["./packages/**"],
            "matchDepTypes": ["devDependencies"],
            "groupName": "Modules devDependencies",
            "schedule": ["* * * * *"]
        }
    ],
    "timezone": "US/Pacific"
}
