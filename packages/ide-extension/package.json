{
    "name": "sap-guided-answer-extension",
    "displayName": "%guidedAnswer.displayName%",
    "description": "%guidedAnswer.description%",
    "publisher": "SAPSE",
    "license": "Apache-2.0",
    "version": "0.0.1",
    "icon": "media/guided-answers-extension.png",
    "categories": [
        "Education"
    ],
    "keywords": [
        "SAP",
        "Guided Answers",
        "Support"
    ],
    "bugs": {
        "url": "https://github.com/SAP/guided-answers-extension/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP/guided-answers-extension.git"
    },
    "engines": {
        "vscode": "^1.39.0"
    },
    "main": "./dist/extension-min.js",
    "private": false,
    "scripts": {
        "build": "pnpm clean && pnpm build:extension",
        "build:extension": "node esbuild.js",
        "clean": "rimraf ./dist ./out ./reports *.tgz *.vsix",
        "format": "prettier --write '**/*.{js,json,ts,yaml,yml}' --ignore-path ../../.prettierignore",
        "lint": "eslint . --ext .ts",
        "ide-ext:package": "vsce package",
        "test": "jest --ci --forceExit --detectOpenHandles --colors",
        "vscode:prepublish": "pnpm run build"
    },
    "activationEvents": [
        "onCommand:sap.ux.guidedAnswer.openGuidedAnswer"
    ],
    "contributes": {
        "configuration": {
            "id": "sap.ux.guidedAnswer",
            "type": "object",
            "title": "%configuration.title%",
            "properties": {
                "sap.ux.guidedAnswer.apiHost": {
                    "type": "string",
                    "description": "%configuration.apiHost%",
                    "default": "https://ga.support.sap.com",
                    "scope": "window"
                },
                "sap.ux.guidedAnswer.nodeEnhancements": {
                    "type": "array",
                    "description": "Commands that can be executed by this VSCode extension in addition to Guided Answer edges",
                    "items": {
                        "type": "object",
                        "properties": {
                            "nodeId": {
                                "type": "integer",
                                "description": "Guided Answer node id"
                            },
                            "command": {
                                "type": "object",
                                "properties": {
                                    "label": {
                                        "type": "string",
                                        "description": "Label for the command"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Description of the command"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "description": "Icon for the command"
                                    },
                                    "exec": {
                                        "type": "object",
                                        "description": "Execution context for the command",
                                        "properties": {
                                            "extensionId": {
                                                "type": "string",
                                                "description": "ID of the extension"
                                            },
                                            "commandId": {
                                                "type": "string",
                                                "description": "ID of the VSCode command"
                                            },
                                            "argument": {
                                                "type": "object",
                                                "description": "Command arguments"
                                            }
                                        },
                                        "cwd": {
                                            "type": "string",
                                            "description": "The current working directory for the terminal command"
                                        },
                                        "arguments": {
                                            "type": "array",
                                            "description": "Terminal command as array of strings"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": [
                        {
                            "nodeId": 48366,
                            "command": {
                                "label": "Check destination",
                                "description": "Run command to check destination in current environment",
                                "icon": "",
                                "exec": {
                                    "extensionId": "sapse.sap-ux-application-modeler-extension",
                                    "commandId": "sap.ux.environmentcheck.open",
                                    "argument": {
                                        "checkType": "Destinations"
                                    }
                                }
                            }
                        },
                        {
                            "nodeId": 48364,
                            "command": {
                                "label": "Terminal destination",
                                "description": "Run terminal command to get destinations",
                                "icon": "",
                                "exec": {
                                    "cwd": "",
                                    "arguments": [
                                        "curl",
                                        "$H2O_URL/api/listDestinations"
                                    ]
                                }
                            }
                        }
                    ]
                },
                "sap.ux.guidedAnswer.htmlEnhancements": {
                    "type": "array",
                    "description": "Text to be replaced with links to commands",
                    "items": {
                        "type": "object",
                        "properties": {
                            "text": {
                                "type": "string",
                                "description": "string to be replaced"
                            },
                            "command": {
                                "type": "object",
                                "properties": {
                                    "label": {
                                        "type": "string",
                                        "description": "Label for the command"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Description of the command"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "description": "Icon for the command"
                                    },
                                    "exec": {
                                        "type": "object",
                                        "description": "Execution context for the command",
                                        "properties": {
                                            "extensionId": {
                                                "type": "string",
                                                "description": "ID of the extension"
                                            },
                                            "commandId": {
                                                "type": "string",
                                                "description": "ID of the VSCode command"
                                            },
                                            "argument": {
                                                "type": "object",
                                                "description": "Command arguments"
                                            }
                                        },
                                        "cwd": {
                                            "type": "string",
                                            "description": "The current working directory for the terminal command"
                                        },
                                        "arguments": {
                                            "type": "array",
                                            "description": "Terminal command as array of strings"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": [
                        {
                            "text": "Fiori: Open Environment Check",
                            "command": {
                                "label": "Check destination",
                                "description": "Run command to check destination in current environment",
                                "icon": "",
                                "exec": {
                                    "extensionId": "sapse.sap-ux-application-modeler-extension",
                                    "commandId": "sap.ux.environmentcheck.open",
                                    "argument": {
                                        "checkType": "Destinations"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        },
        "commands": [
            {
                "command": "sap.ux.guidedAnswer.openGuidedAnswer",
                "title": "%commands.guidedAnswer.openGuidedAnswer.title%",
                "category": "%commands.fiori.category%"
            }
        ]
    },
    "dependencies": {
        "@sap/guided-answers-extension-webapp": "workspace:*"
    },
    "devDependencies": {
        "@sap/guided-answers-extension-core": "workspace:*",
        "@sap/guided-answers-extension-types": "workspace:*",
        "@types/vscode": "1.39.0",
        "esbuild": "0.14.27",
        "esbuild-plugin-copy": "1.3.0",
        "jsdom": "19.0.0",
        "vsce": "2.7.0",
        "vscode-uri": "3.0.3"
    },
    "galleryBanner": {
        "color": "#00195A",
        "theme": "dark"
    }
}
